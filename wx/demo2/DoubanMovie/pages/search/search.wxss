.search{
    background: #f5f5f5;
    font-size: 14px;
}
.searchRank{
    width:100%;
    height: 44px;
    background-color: #2b2e33;
    padding: 6px 0 0;
}

.searchRank .form{
   
    width:95%;
    margin: 0 auto;
    position: relative;
    background: #fff;
    border-radius: 4px;
    overflow: hidden;
    vertical-align: middle;
}

.searchRank .form input{
    width: 100%;
    border: none;
    font-size: 15px;
    height: 32px;
    line-height: 32px;
    padding-left: 5px;
    background-color:#fff;
}

.searchRank .form input.cl{
   color:#a9a5a5; 
}
.searchRank icon{
    position: absolute;
    right: 4px;
    top: 5px;
    display: block;
    width: 20px;
    height: 20px;
    line-height: 18px;
    text-align: center;
    color: #ccc;
    font-size: 15px;
    font-weight: 700;
}
.content {
    width: 550rpx;
    height: 300rpx;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
}
.hot-item{
    width: 750rpx;
    height: 300rpx;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    margin-bottom: 5rpx;
    display: flex;
    background: #ffffff;
    flex-wrap: wrap;
}
.hot-item image {
    width: 200rpx;
    height: 300rpx;
}
.title {
    width: 450rpx;
    padding-left: 10rpx;
    padding-top: 20rpx;
    font-family: "sans-serif";
}
.image {
    width: 200rpx;
    height: 300rpx;
}
.average {
    width: 50rpx;
    height: 50rpx;
    padding-top: 20rpx;
    color: crimson;
    text-align: right;
}
.genres-title {
    width: 80rpx;
    height: 50rpx;
    padding-left: 10rpx;
    padding-top: 20rpx;
    font-size: 25rpx;
    font-family: "sans-serif";
    color: black;
}
.genres {
    width: 450rpx;
    height: 50rpx;
    padding-top: 20rpx;
    font-size: 25rpx;
    font-family: "sans-serif";
    color: #ccc;
}
.casts {
    height: 50rpx;
    padding-left: 10rpx;
    font-size: 25rpx;
    font-family: "sans-serif";
    color: #ccc;
}
.search-result {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    font-family: "sans-serif";
    text-align: center;
    color: #ccc;
