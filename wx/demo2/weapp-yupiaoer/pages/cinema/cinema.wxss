.header{
    display:flex;
    font-size: 14px;
    border-bottom: 1px solid #efefef;
}
/*网页头部 之 地区*/
.city{
    color: #666;
    line-height:40px;
    padding:0px 32px 0 10px;
    position: relative;
    border-right: 1px solid #efefef;
}
.city::after{
    content: "";
    width: 6px;
    height: 6px;
    border: 2px solid #b3b3b3;
    border-left: none;
    border-top: none;
    position: absolute;
    right: 8px;
    top: 50%;
    margin-top: -6px;
    transform: rotate(45deg);
}
.section{
    flex: 1;
    height: 40px;
    padding-left: 40px;
    position: relative;
    background: url(../../img/search.png) no-repeat left center;
    background-size: 40px 40px;
    box-sizing: border-box;
}
.section input{
    margin-top: 6px;
    font-size: 14px;
    color: #999;
}

/*电影院内容*/
.cinemaList{
    width: 100%;
    font-size: 14px;
    padding: 10px;
    border-bottom: 1px solid #eaeaea;
    font: 14px Helvetica,STHeiTi,sans-serif;
}
/*电影院内容 之 头部*/
.cinema-top{
    color: #333;
    margin:8px 0px;
    display: flex;
}
.cinema-top text{
    display: inline-block;
}
.cinema-top .left,.cinema-middle .left{
    flex: 1;
}
.cinema-top .right{
    color: #f04949;
    padding:0px 20px ;
    font-weight: 500;
}
.cinema-middle{
    color: #999;
    display: flex;
    margin-bottom: 6px;
}
.cinema-middle .right{
    color: #666;
    padding:0px 20px ;
}
.cinema-bottom{
    color: #1b97ff;
}
.cinema-bottom text{
    box-shadow: inset 0 0 1px #007ee7;
    display: inline-block;
    font-size: 11px;
    line-height: 18px;
    border-radius: 2px;
    padding: 0 5px;
}
