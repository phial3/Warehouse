/*电影资料*/
.movieView{
   width: 100%;
   padding: 10px;
   display: flex;              
   flex-wrap: wrap;
   cursor: pointer;
   border-bottom: 1px solid #dbdbdb;
   position: relative;
}
.movieView image{
    width:65px;
    height: 95px;
}
/*电影右边*/
.movie-right{
    flex: 1;
    font-size: 14px;
    color: #333;
    padding: 6px 10px;
    margin-right: 10px;
}
.movie-top,.movie-bottom{
    position: relative;
}
.movie-top .right{
    color: #cf616a;
    position: absolute;
    right: 0;
    background: url(../../img/index.png) no-repeat left center;
    background-size: 16px;
    padding:3px 0px 0px 24px;
}
.movie-bottom{
    margin-top: 10px;
    font-size: 13px;
    padding-right: 50px;
}
.movie-bottom .text1{
    display: block;
    color: #666;
    font-weight: bold;
    margin: 15px 0 6px;
}
.movie-bottom .actor{
    color: #999;
}
.movie-bottom button{
    position: absolute;
    right: 0;
    bottom:-6px;
    line-height: 18px;
    padding: 5px 8px;
    color:  #1296db;
    font-size: 13px;
    border-radius: 2px;
    border:1px solid  #1296db;
}
.show {
    display: block;
}
.hide {
    display:none;
}