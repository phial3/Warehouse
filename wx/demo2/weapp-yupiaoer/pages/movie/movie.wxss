/*网页头部*/
.header-bar{
    width: 100%;
    font-size: 14px;
    display: flex;
    margin-bottom: 2px;
}
/*网页头部 之 logo标志*/
 .header-bar image{
    width:65px;
    height: 45px;
}
/*网页头部 之 地区*/
.city{
    color: #666;
    line-height: 45px;
    padding:0px 6px;
    position: relative;
    padding-right: 16px;
}
.city::after{
    content: "";
    width: 6px;
    height: 6px;
    border: 2px solid #b3b3b3;
    border-left: none;
    border-top: none;
    position: absolute;
    right: 1px;
    top: 50%;
    margin-top: -6px;
    transform: rotate(45deg);
}
/*网页头部 之 文字片*/
.header-content{
    flex:1;
    color: #666;
    height: 44px;
    line-height: 44px;
    border-bottom: 1px solid #dbdbdb;
}
.header-content text{
    display: inline-block;
    width: 50%;
    height: 44px;
    text-align: center;
    box-sizing: border-box; 
    position: relative;
}
.header-content text:first-child::after{
    content: "";
    position: absolute;
    right: 0px;
    top:50%;
    margin-top: -6px;
    width: 1px;
    height: 18px;
    background: rgba(221, 221, 221, .6);
}
.header-content text.active{
     border-bottom: 2px solid #1296db;
}

/*幻灯片*/
image{
