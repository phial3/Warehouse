.Login_wrap{
    background: url(../../resource/images/login.png) no-repeat;
    background-size:100% ;
    position: relative;
    min-height:100%;
}
.LoginLogo {
    margin: 0 auto;
    padding-top: 2.5rem;
    width: 2.5rem;
    height:2.5rem;
}
.LoginLogo .img{
    width:100%;
    height:100%;
}
.login_input {
    padding: 0 2.25rem;
    margin-top: 2rem;
}
.login_input .form_wrap .input {
    outline: none;
    margin-top: .4rem;
    width: 100%;
    height: 1.75rem;
    line-height: 1.75rem;
    font-size: .6rem;
    color: #616161;
    border: #616161 solid 1px;
    background: transparent;
    padding-left:.5rem;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.placeholder-class{
    color:#616161;
}
.login_input .form_wrap .button{
    width: 100%;
    height: 1.75rem;
    line-height: 1.75rem;
    text-align: center;
    color: #fff;
    font-size: .6rem;
    color: #fff;
    margin-top: .75rem;
    background: #e7b800;
    border: none;
}
.login_input .login_bot {
    margin-top: .75rem;
    overflow: hidden;
    display:flex;
    color: #7D7C7C;
    font-size: .6rem;
}
.login_input .login_bot .fr{
    flex:1;
    text-align: right;
}
.login_input .login_bot .fl{
    flex:1;
    text-align: left;
}
.modal{
    text-align: center;
}