.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.empty-label {
  font-size: 44rpx;
  color: #666;
  padding: 60rpx;
}

.add-link {
  color: #999;
  text-decoration: underline;
  font-size: 32rpx;
}

.list {
  padding: 0 20rpx;
}

.list-item {
  padding: 20rpx;
  border-bottom: 1px solid #e2e2e2;
}

.list-item-left {
  display: flex;
  flex-direction: column;
}

.list-item-text {
  color: #333;
  font-size: 32rpx;
  padding: 10rpx 0;
}

.list-item-time {
  color: #666;
  font-size: 24rpx;
}