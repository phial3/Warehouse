.page-top {
  background-color:  #1bb3a8;
  color: #fff;
  height: 300rpx; 
  text-align:center;
}
.coinnumber{
  display: block;
  margin:auto;
  padding-top: 100rpx;
  font-size: 50rpx;
}
.coinusetitle{
  display: block;
  padding-top: 30rpx;
  margin:auto;
  font-size: 30rpx;
}
.page-button {
  background-color:  #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  border-bottom: solid #e3e3e3 1rpx;
}
.in-button{
  width: 50%;
  border-right: solid #e3e3e3 1rpx;
}
.out-button{
  width: 50%;
}
.icon-img{
  height: 50rpx;
  width: 50rpx;
  margin-left: 100rpx;
  margin-top: 20rpx;
}
.inout_text{
  font-size: 35rpx;
  margin-left: 20rpx;
  color: #000;
}
.message_list{
  background-color: #f2f2f2;
  padding-left: 8rpx;
  padding-right: 8rpx;
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  margin-top: 8rpx;
  background-color: #fff;
/**  border: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #d0d0d0;
  border-radius: 5rpx;*/
}
.item-left{
    margin-top: 15rpx;
    display:table-cell;
    text-align: center; 
}

.image{

    width: 88rpx; 
    height: 88rpx;
    border-radius: 44rpx; 
    background-color: #eeeeee;
}

.item-middle{
    flex: 1;
    margin-left: 10rpx;
    padding-top: 13rpx;
    overflow: hidden;
}
.title{
  color: #000000;
  font-family:"微软雅黑";
  font-weight:bold;
  line-height: 20rpx;
  padding: 32rpx 16rpx,0,16rpx;
  font-size: 22rpx;
  margin-top: 60rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/

}
.message{
  font-family:"微软雅黑";
  color: #808080;
  line-height: 10rpx;
  font-size: 16rpx;
  padding: 0 16rpx,0,16rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
}
.item_right{
    padding-top: 13rpx;
    overflow: hidden; 
}
.time{
    color:#808080;
    font-size: 8rpx;
}
.mark{

    position:relative;
    left:15rpx;
    padding-top: 4rpx;
    background-color:#F74c31; 
    text-align: center;
    font-size: 10rpx; 
    width: 40rpx;
    height: 40rpx;
    border-radius:20rpx; 
    color: #ffffff;
    display:table-cell;
}
.line{
    height: 1px;
    width:100%;
    background-color: #E0E1E2;
}
