.layout {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
}

.item-box {
    display: flex;
    width: 100%;
    height: 260rpx;
    margin-bottom: 20rpx;
    padding: 30rpx;
    background-color: #fff;
    box-sizing: border-box;
    overflow: hidden;
}

.item-img, .item-img image {
    width: 200rpx;
    height: 200rpx;
    margin: 0;
    overflow: hidden;
}

.item-right {
    width: 450rpx;
    height: 200rpx;
    margin-left: 24rpx;
    overflow: hidden;
}

.item-text {
    display: block;
    width: 100%;
    margin: -2rpx 0 16rpx;
    line-height: 24rpx;
    font-size: 24rpx;
    color: #999;
}

.item-title {
    width: 100%;
    height: 100rpx;
    margin-bottom: 35rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #444;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.item-hot {
    font-size: 24rpx;
    color: #fb5d5d;
}

.item-selling {
    font-size: 24rpx;
    color: #999;
}