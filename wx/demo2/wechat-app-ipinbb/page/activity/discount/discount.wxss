.banner,
.banner image {
    width: 750rpx;
    height: 300rpx;
}

.marTop20 {
    margin-top: 20rpx;
}

.title {
    width: 100%;
    height: 64rpx;
    text-align: center;
    line-height: 64rpx;
    font-size: 28rpx;
    color: rgb(102, 102, 102);
    background-color: rgb(255, 255, 255);
}

.title text {
    margin: 0 10rpx;
    color: rgb(251, 93, 93);
}

.limited-box {
    background-color: rgb(255, 255, 255)
}

.limited-top {
    display: flex;
    padding: 30rpx;
}

.img-box {
    position: relative;
    width: 200rpx;
    height: 200rpx;
}

.img-box image {
    width: 200rpx;
    height: 200rpx;
    background-color: rgb(102, 102, 102);
}

.seckill-tip {
    position: absolute;
    top: 8rpx;
    width: 82rpx;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 24rpx;
    text-align: center;
    color: #fff;
    background-image: url(data:image/png;base64,);
    background-size: cover;
}

.limited-content {
    position: relative;
    width: 470rpx;
    height: 200rpx;
    margin: -15rpx 0 0 20rpx;
}

.limited-time {
    line-height: 36rpx;
    font-size: 24rpx;
    color: rgb(251,93,93);
}

.limited-tit {
    display: -webkit-box;
    width: 100%;
    max-height: 128rpx;
    margin-top: 16rpx; 
    line-height: 48rpx;
    font-size: 32rpx;
    color: #444;
    text-overflow: ellipsis;
    box-sizing: border-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.limited-cont-btm {
    position: absolute;
    bottom: -20rpx;
    left: 0;
    width: 100%;
    line-height: 36rpx;
    font-size: 24rpx;
    color: rgb(153,153,153);
}

.limited-group {
    float: right;
}

.group-price {
    margin-right: 18rpx;
    font-size: 32rpx;
    color: rgb(251,93,93);
}

.odd-price {
    text-decoration: line-through;
}

.limited-btm {
    height: 80rpx;
    margin: 0 30rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    color: rgb(153,153,153);
    border-top: 1rpx solid rgb(216, 216, 216);    
}

.icon-right {
    float: right;
    margin: 0 0 0 16rpx;
}

.text-color1 {
    color: rgb(102,102,102);
}