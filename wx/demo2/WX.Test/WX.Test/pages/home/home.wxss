page{
    background: #ebebeb;
}
.user_header{
    height: 200px;
    background-color: #3080c0;
}
.user_info{
    text-align: center;
    padding-top: 50px;
}
.user_icon{
    width: 80px;
    height: 80px;
    border-radius: 80px;
    border: 2px solid red;
    background-color: orange;
}
.user_nickName{
    color: white;
    display: block;
}
 /*display: flex;
