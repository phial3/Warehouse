
#container{
    background-color: rgb(240, 240, 240);
}
.cell{
    margin-top: 10px;
    background-color: white;
}
.merchantMessage{
    width: 100%;
    height: 70px;
    margin-top: 7px;
}
.merchantIcon{
    width: 70px;
    height: 70px;
    float: left;
    padding:7px;
    box-sizing: border-box; 
}
.merchantname{
    font-size: 17px;
}
.merchantDetailMessage{
    margin-top: 7px;
    float: left;
    width: 80%;
}
.smallTitle{
  margin-top: 6px;  
  font-size: 13px;
  color: gray;
}
.descAndAddress{
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding-bottom: 7px;
    border-bottom: 1px solid rgb(240, 240, 240);
}
/*优惠信息*/
.allFavorableMessage{
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 7px;
    box-sizing: border-box;
}
.favorableMessage{
    margin-bottom: 7px;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 15px; 
}
.favorableIcon{
    width: 15px;
    height: 15px;
    line-height: 15px;
    vertical-align: bottom;
}
.favorableTitle{
    margin: 0;
    padding-left: 7px;
    height: 15px;
    line-height: 15px;
    width: 90%;
    white-space:nowrap;
    overflow: hidden;
    text-overflow:ellipsis;
}
.loadMoreDataButton{
    background-color: white;
    font-size: 15px;
    border: none;
}
