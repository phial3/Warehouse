.pageContainer{
    margin:0px;
    padding: 0px;
    background-color: rgb(240, 240, 240);
}
.container{
    margin-bottom: 10px;
    background-color: white;
    padding: 0;
}
.userInfoContainer{
    display: flex;
    flex-direction: column;
    margin-bottom: 6px;
}
.userInfo{
    margin: 6px;
}
.userIcon{
    width: 40px;
    height: 40px;
    float: left;
    border-radius: 50px;
    margin-right: 6px;
}
.userNameAndTime{
    float: left;
}
.userName{
    margin-top: 6px;
    font-size: 14px;
    color: darkslategray;
}
.time{
    margin-top: 6px;
    font-size: 12px;
    color: gray;
}
.content{
    font-size: 16px;
    padding: 6px;
    box-sizing: border-box;
    color: rgb(60, 60, 60);
    line-height: 20px;
}
.operrationContainer{
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-bottom: 6px;
}
.operrationButton{
    width: 25%;
    text-align: center;
}
.operrationIcon{
    width: 15px;
    height: 15px;  
}
.operrationTitle{
    font-size: 13px;
    margin: auto 0;
    margin-left: 3px;
    color: gray;
    display: inline-block;
    
}
.allCommentsContainer{
    background-color: rgba(248, 248, 248, 1);
    margin: 6px;
}
.comments{
    display: flex;
    flex-direction: column; 
    margin-top: 6px; 
}
.commentContainer{
    font-size: 14px;
    line-height: 17px;
}
.commentUser{
    color: cadetblue;
}
.commentContent{
    color: dimgray;
}

