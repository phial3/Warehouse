.list_item{
	overflow: hidden;
	font-size:12px;
	color:#666;
	padding:4px 10px;
	border-bottom:1px solid #f1f1f1;
	font-family: 微软雅黑;
	margin:0 4px;
}
.list_item.bg{
	background:#f3f3f3;
	color:#fff;
	height:30px;
	line-height:30px;
	padding:0;
}
.list_item.bg .u-time{
	padding:0 0 0 10px;
	margin:0;
	font-size:16px;
	font-weight:bold;
}

.list_item:active{
	background:#f0f0f0;
}

.list_item .userinfo-avatar-img{
	width: 50px;
	height: 50px;
	vertical-align:middle;
	float: left;
/* 	border-radius:50%;  */
}
.list_item  .u-info{
	margin-left:60px;
	height:50px;
	vertical-align:middle;
	overflow: hidden;
}
.list_item .u-time{
	text-align:left; 
	color:#333;
	margin-left:60px;
	padding:15px 0;
}
 

.scroll_view{
	 position:absolute;
	height:100%;
	width:100%;
}