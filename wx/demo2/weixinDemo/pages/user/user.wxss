.nav{
    display: flex;
    width: 100%;
    height: 40px;
    background-color: black;
    color: white;
    justify-content: space-between;
}
.nav view{
    text-align: center;
    width: 251rpx;
    line-height: 40px;
    color: #aaa;
    position: relative;
}
.nav .first{
    color: white;
}
.bottom{
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 2px;
}
.nav .firstview{
    background-color: red;
}