/*发布tab*/
.top-bar {
  height: 72rpx;
  background: #feffff;
  width:100%;
  position: fixed;
  top:0;
  z-index:1;
}
.top-bar-item {
  display:inline-block;
  width: 33%;
  text-align: center;
  line-height: 72rpx;
  font-size: 17px;
}
/*发布tab底下的标示*/
.flag-line{
  height: 6rpx;
  width: 33%;
  color: #1AAD19;
  background: #1AAD19;
  margin-top: -28rpx;
  position: fixed;
  z-index:1;
}
/*填写内容*/
.content-input{
  background-color: #fff;
  padding: 20rpx;
  margin-top: 100rpx;
  height: 200rpx;
}
/*照片*/
.add-photo-wrap{
  background-color: #fff;
}

.add-photo-image{
  margin: 10rpx;
  width: 116rpx;
  height: 116rpx;
}
.category-wrap{
  display: flex;
  flex-wrap: wrap;
}
.select-category{
  font-size: 14px;
  margin-bottom: 30rpx;
}
.select-category-wrap{
  margin: 20rpx;
}
.select-category-wrap .main-content{
  margin: 40rpx 0 20rpx 20rpx;
}