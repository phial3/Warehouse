page {
    background: #DDD;
}
.cover {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    bottom: 0;
}
.mask {
    position: absolute;
    bottom: 100rpx;
    left: 0;
    height: 150rpx;
    width: 100%;
    background: rgba(0, 0, 0, .3)
}
.logo {
    margin-left: 100rpx;
    width: 150rpx;
    height: 150rpx;
}
.mask .cover-author,
.mask .app-author {
    position: absolute;
    left: 280rpx;
}
.mask .cover-author {
    top: 20rpx;
    font-size: 40rpx;
    color: #FFF;
    font-weight: bold
}
.mask .app-author {
    font-size: 30rpx;
    bottom: 20rpx;
    color: #EEE
}

.section-dialog{
    position:absolute;
    left:0;
    top:0;
    width: 100%;
    height: 100%;
}
.halftransparent{
    background: rgba(0, 0, 0, 0.6)
}
.tansdialog{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.dialog{
    width: 80%;
    display: flex;
    flex-direction: column;
    margin: 8px;
    justify-content: space-between;
    align-items: flex-start;
    background:white;
}

.dialog-item0{
    width: 100%;
    padding: 12px 0px 12px 20px;
}
.dialog-item1{
    width: 100%;
    padding: 12px 0px 12px 20px;
}

.dialog-item-input-title{
    font-size: 24px;
    padding: 12px 0px 12px 20px;
    color: black
}

.dialog-item-input-input{
    padding: 12px 0px 12px 20px;
    color: black;
    widows: 100%;
}

.dialog-item-input-button{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items:center;
    background:white;
}

.dialog-item-input-button-cancle{
    font-size: 18px;
    color: rgb(196,18,0);
    padding: 12px 0px 12px 20px;
    margin-right: 20px;
}

.dialog-item-input-button-confirm{
    font-size: 18px;
    color: rgb(196,18,0);
    padding: 12px 0px 12px 20px;
    margin-right: 20px;
}
