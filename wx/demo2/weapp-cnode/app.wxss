/**app.wxss**/
.container {
  height: 100%;
  box-sizing: border-box;
}
.news-item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f5f5f5;
}
.news-item .reply {
  float: left;
  width: 120rpx;
  text-align: center;
  color: #1abc9c;
  font-weight: bold;
}
.news-item .title {
  display: flex;
  flex-direction: column;
  align-content: space-around;
  height: 100%;
  padding-right: 10rpx;
}
.news-item .title .title-text,
.news-item .title .title-info {
  height: 50rpx;
  line-height: 50rpx;
}

.news-item .title .title-text {
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.news-item .title .title-info {
  color: #888;
  font-size: 26rpx;
}

.news-item .title .title-info image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  vertical-align: top;
}

.pagnite {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
.pagnite .backward,
.pagnite .forward {
  width: 50%;
  font-size: 28rpx;
  text-align: center;
}