/*订阅*/
.sub-nav-item {
  display: flex;
  width: 3rem;
  font-size: 0.8rem;
  line-height: 35px;
  font-weight: bold;
  justify-content: center;
}

.sub-list-item {
  display: flex;
  flex-direction: column;
}

.sub-list-item .media {
  width: 100%;
}

.sub-detail {
  display: flex;
  flex-direction: column;
  padding: 15px;
}

.sub-detail .desc {
  font-size: 0.9rem;
  line-height: 1.4;
  margin: 20px 0 15px 0;
}

.sub-detail .sub-type {
  font-size: 1rem;
  line-height: 1;
  font-weight: bold;
}

.author {
  display: flex;
}

.sub-avatar {
  width: 1.3rem;
  height: 1.3rem;
  border-radius: 0.7rem;
  margin-right: 6px;
}

.author-name {
  font-size: 0.6rem;
  font-weight: bold;
  margin-bottom: 2px;
}

.pub-time {
  font-size: 0.5rem;
  font-weight: bold;
}

.sub-platform text {
  font-size: 0.5rem;
  margin-right: 5px;
  font-weight: bold;
  line-height: 1;
}

.sub-platform image {
  width: 1rem;
  height: 1rem;
}

/*专题*/
.special-list-item {
  height: 10.7rem;
  position: relative;
}

.special-list-item image {
  width: 100%;
  height: 100%;
}

.special-title {
  width: 100%;
  box-sizing: border-box;
  position: absolute;
  font-size: 0.9rem;
  font-weight: bold;
  color: #fff;
  top: 3.5rem;
  padding: 0 2rem;
  line-height: 1.5;
  text-align: center;
}

/*loading*/
.loading {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
  background-color: transparent;
}

.loading image {
  width: 4rem;
  height: 4rem;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -2rem;
  margin-left: -2rem;
  -webkit-animation: rotate 1s linear infinite;
  -moz-animation: rotate 1s linear infinite;
  animation: rotate 1s linear infinite;
}

@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
  } to {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  } to {
    transform: rotate(360deg);
  }
}

