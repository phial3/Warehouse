.header{
	width: 100%;
	height: 2.5rem;
	background-color: #dddddd; 
}

.record{
	position: absolute;
	background-image: url('../../image/record.png');
	background-size: contain;
	height: 1.8rem;
	width: 1.8rem;
	top:0.3rem;
	right: 5%;
}

.search{
	width: 70%;
	position: relative;
	border-radius: 6px;
	font-size: 0.8rem;
	top:0.35rem;
	left:10%;
	background-color: #ffffff;
	padding: 0.2rem; 
}

.content{
	width: 100%;
	min-height: 100%;
}

.list-block{
	width: 100%;
	height: 4rem;
	position: relative;
	border-bottom: 1px solid #dddddd;
}

.avator{
	height: 3rem;
	width: 3rem;
	position: absolute;
	top: 0.5rem;
	left: 2.5%;
	border-radius: 3px;
	background-image: url('../../image/icon64_appwx_logo.png');
	background-size: contain;
}

.name{
	position: absolute;
	top: 0.7rem;
	left:20.5%;
	font-size: 30rpx;
}

.new-message-time{
	font-size: 20rpx;
	position: absolute;
	top: 0.7rem;
	color: #8d8d8d;
	right: 2.5%;
}

.new-message{
	font-size: 20rpx;
	position: absolute;
	color: #8d8d8d;
	left: 20.5%;
	bottom: 1em;
}