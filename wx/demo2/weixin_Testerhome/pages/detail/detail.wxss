.detail-post {
  background-color: #eee;
  overflow: hidden;
  display: inline;
}
.detail-post-header {
  background-color: #4342B6;
  line-height: 40px;
  padding: 15px 17px;
  position: relative;

  /*border-bottom: 1px #ccc solid;*/

}

.detail-post-ava{
  display: flex;
}
.detail-post-node{
  display: flex;
}

.detail-post-title {
  margin: 0;
  padding: 0;
  font-size: 18px;
  margin-right: 50px;
  color: #fff;
  line-height:20px;
}
.detail-post-meta {
  position: relative;
  padding: 13px 18px 0 18px;

}
.detail-post-avatar, .detail-post-comment-avatar {
  
  width: 46px;
  height: 46px;
  display: block;
  float: left;
  margin-top: 3px;
}
.detail-post-avatar-img, .detail-post-comment-avatar-img {
  position: absolute;
  right: 10px;
  width: 55px;
  height: 55px;
  border-radius: 50%;
}
.detail-post-info, .detail-post-comment-info, .detail-comment-content {
  margin: 0 0 0 50px;
  padding: 0 0 0 5px;
  position: relative;
  line-height: 20px;
  overflow: hidden;
}
