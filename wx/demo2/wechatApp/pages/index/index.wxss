/**index.wxss**/
page {
  background: #f2f2f2;
}
.section-list {
  background: #fff;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  margin-top: 1.4rem;
}
.section {
  display: flex;
  align-items: center;
  height: 2.8rem;
  padding-left: 1rem;
  font-size: 12px;
}
.link:active {
  background: #f0f0f0;
}
hr {
  margin-left: 1rem;
  border: 0;
  border-bottom: 1px solid #ddd;
  display: block;
}
.inputText {
  width: 4rem;
}
.section input {
  flex:1;
  height: 100%;
  display: block;
  line-height: 100%;
}
.section icon {
  margin-right: 10px;
}
.bigText {
  font-size: 2.4rem;
  display: block;
  text-align: center;
  width:100%;
  margin-top: 2rem;
  margin-bottom: .4rem;
  color: #333;
}
.smallText {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: #888;
  margin-bottom: 2rem;
}
button {
  margin-left: 1rem;
  margin-right: 1rem;
  margin-bottom: 2rem;
  font-size: 12px;
  height: 2.5rem;
  line-height: 2.5rem;
}