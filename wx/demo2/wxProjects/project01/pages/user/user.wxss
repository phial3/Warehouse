/*u-1 start*/
.u-1{
  height:235rpx;
  background:url("../../images/u_bg.jpg");
  background-size:cover;
  position:relative;
  color:#fff;
}

.u-1-pic{
  width:160rpx;
  height:160rpx;
  border-radius:50%;
  padding:5rpx;
  background-color:rgba(255, 255, 255, .5);
  position: absolute;
  bottom:-80rpx;
  left:40rpx

}

.u-set{
  display: inline-block;
  width:120rpx;
  height:60rpx;
  background-color:rgba(0, 0, 0, .5);
  text-align:center;
  line-height: 60rpx;
  border-radius:30rpx;
  float:right;
  margin:20rpx 20rpx 0 0;
  font-size:28rpx;
}

.u-name{
  float:left;
  margin:160rpx 0 0 250rpx;
}

.u-1-pic image{
  border-radius:50%;
}
/*u-1 end*/
/*u-2 start*/
.u-2{
  padding-bottom:20rpx;
}
.u-list{
  display:flex;
  padding-left:210rpx;
  font-size:28rpx;
  margin-top:30rpx;
  color:#051b28;
}
.u-item{

  flex:1;
  border-left:1px solid #e7e7e7;
}

.u-item:first-child{
  border:0;
}

.u-item text{
  display: block;
  text-align:center;
}
/*u-2 end*/

.order-act{
  display:flex;
  justify-content: space-around;
  font-size:24rpx;
}
.order-item text{
  display: block;
  margin-top:10rpx;
}
.order-item .icon{
  margin:0 auto;
  width:50rpx;
  height:50rpx;
}
.icon-pay{
  background-position: -105rpx -53rpx;
}
.icon-send{
  background-position: -105rpx -105rpx;
}
.icon-deliver{
  background-position: -158rpx -53rpx;
}
.icon-evaluate{
  background-position: 0rpx -53rpx;
}
.icon-refund{
  background-position: 0rpx 0rpx;
}
/*全部订单 start*/
