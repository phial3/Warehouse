<import src="../../../templates/header.wxml"/>
<view class="container">
    <view class="section mt">
       
         <template is="header" 
        data="{{title:'wx.setNavigationBarTitle',desc:'动态设置当前页面的标题。'}}"/>

        <button type="primary" class="mt" bindtap="setNavigationBarTitle"> 设置当前页面的标题 </button>
        <button type="primary" class="mt" bindtap="showNavigationBarloading"> 显示导航条加载动画 </button>
        <button type="primary" class="mt" bindtap="hideNavigationBarloading"> 隐藏导航条加载动画 </button>
      
    </view>
</view>