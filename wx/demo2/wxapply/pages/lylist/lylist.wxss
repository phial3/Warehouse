/**app.wxss**/
.page_body{
    padding: 0 15px;
}
.category-item{
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    -webkit-transition: .3s;
    transition: .3s;

    margin: 10px 0;
    background-color: #fff;
    overflow: hidden;
    border-radius: 2px;
    cursor: pointer;
}
.ly_subcategory_list text{
    -webkit-box-flex: 1;
        -webkit-flex: 1;
        flex: 1;
}

.ly_category image{
    display: inline-flex;
    vertical-align: middle;
}

.image-button,
.icon{
    width: 30px;
    height: 30px;
    vertical-align: middle;
}

.open .weui-flex {
    opacity: .5;
}

.d-button-play{
  width: 45rpx;
  height: 45rpx;
  transition: 400ms;
  opacity: .6;
}
.image-button-play{
    width: 16px;
    height: 16px;
    padding-left: 20px;
    display: inline-block;
}

.category-item.open .image-button-list {
  transform: rotate(90deg);
}

.category-item.close .ly_subcategory_list{
    display:none;
    height: 0;
}

.ly_subcategory_list {
  transition: 200ms;
  height: auto;
  border-top: 1px solid #d8d8d8;
}


.bgaudioplaystage{
    position: fixed;
    top: 0;
    background: #efeff4;
    border-bottom: 1px solid #d6d6db;
    z-index: 10;
    width: 100%;
}

.bgaudioplaystage text{
    padding-left: 10px;
}

.download-button{
    display:none;
}
