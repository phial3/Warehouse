.section {
    height: 100%;
}
.dsn {
    display: none;
}
.flex-wrp {
    height: 100%;
    flex-direction:column;
    display: flex;
}
.text-left {
    text-align: left;
}
.wait_label {
    height: 20rem;
    width: 100%;
    display: flex;
    background-color: #f8777b;
}
.draw_label {
    width: 100%; 
    height: 20rem;
    display: flex;
}
.draw_label canvas {
    display: inline-block;
    width: 100%;
    height: 100%;
    background-color: #ebe8bb;
    box-sizing: border-box;
}
.scroll_user {
    display: flex;
    width: 100%;
    height: 3rem;
    background-color: #f1f1d0;
    padding: 0.5rem;
    box-sizing: border-box;
    white-space: nowrap;
}
.scroll_user view {
    display: inline-block;
    width: 2rem;
    height: 2rem;
    border-radius: 2rem;
    background-color: #ffffff;
    margin: 0 0.2rem;
}
.scroll_chat {
    display: flex;
    width: 100%;
    height: 8rem;
    padding: 0.5rem 0.5rem 0 0.5rem;
    box-sizing: border-box;
    text-align: center;
}
.scroll_chat text {
    display: inline-block;
    width: 100%;
    margin: 0.2rem 0;
    line-height: 1.2;
    color: #cbcad0;
    font-size: 0.8rem;
}
.foot_label {
    display: flex;
    width: 100%;
    height: 2.5rem;
    padding: 0.2rem 0.4rem;
    box-sizing: border-box;
    background-color: #ccc;
}
.foot_label input {
    background-color: #fff;
    height: 100%;
    width: 100%;
    border-radius: 10rem;
    padding: 0 1rem;
}
.system-message {
    font-size: 14px;
    line-height: 14px;
    color: #fff;
    background: #cecece;
    border-radius: 4px;
    display: inline-block;
    padding: 8rpx 15rpx;
    margin: 0 10rpx;

}