/**doing.wxss**/
.container {
  background: #ff6666;
}
.wisdom {
  width: 100%;
  line-height: 1.3;
  color: white;
  font-size: 30rpx;
  font-weight: bold;
}
.wisdom::before {
  content: '“';
  display: block;
  float: left;
  font-size: 60rpx;
  line-height: .6;
  color: white;
  margin-right: 20rpx;
}

/**圆动画**/
.circle {
  width: 360rpx;
  height: 360rpx;
  line-height: 360rpx;
  border-radius: 50%;
  text-align: center;
  margin: -100rpx auto 0;
  font-weight: bold;
  font-size: 50rpx;
  color: white;
  position: relative;
}
.left, .right {
  position: absolute;
  width: 186rpx;
  height: 372rpx;
  top: -6rpx;
  overflow: hidden;
}
.left {
  left: -6rpx;
}
.right {
  right: -6rpx;
}
#l-after, #r-after {
  width: 360rpx;
  height: 360rpx;
  border-width: 6rpx;
  border-style: solid;
  border-color: transparent transparent white white;
  top: 0;
  position: absolute;
  border-radius: 50%;
  transform: rotate(-135deg);
}
#l-after {
  left: 0;
}
#r-after {
  right: 0;
  border-color: white white transparent transparent;
}

/**圆动画 END**/

