.goods_list{
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    background: #e1e1e1;
}
.goods_list .list-goods{
    width: 50%;
    height: 13rem;
    overflow: hidden;
    flex-wrap: nowrap;
    border-top:#e1e1e1 solid .3rem;
    background: #fff;
}
.goods_list .list-goods .even {
    border-left: .15rem solid #e1e1e1;
    height:100%;
    border-bottom: #e1e1e1 solid .3rem;
}

.goods_list .list-goods .odd {
    border-right: .15rem solid #e1e1e1;
    height:100%;
    border-bottom: #e1e1e1 solid .3rem;
}
.goods_list .list-goods .imgspan {
    height: 10rem;
    overflow: hidden;
}
.goods_list .list-goods .imgspan .img{
    width:100%;
    height:100%;
}
.goods_list .list-goods .title{
    font-size: .65rem;
    margin: .2rem 0 .25rem 0;
    color: #333;
    padding: 0 .35rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}
.goods_list .list-goods .pri{
    font-size: .65rem;
    padding: 0 .35rem;
    font-weight: 300;
    color: #E6B54D;
    text-align: center;
    margin-top:.7rem;
}
.goods_list .list-goods .pri .del_price{
    color: #666;
    font-size: .6rem;
    margin: 0 .35rem 0 .25rem;
    text-decoration: line-through;
}
.end{
    line-height: 1.5rem;
    text-align: center;
    font-size: .7rem;
    color:#666;
    font-weight:300;
    background: #e1e1e1;
    padding-top:.5rem;
}