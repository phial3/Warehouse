#root {display:flex; flex-flow:column nowrap; color:#272636; font-size:12rpx;}

#select {display:flex; flex-flow:column nowrap; font-size:32rpx; padding:20rpx 10rpx 10rpx 10rpx;}
#select view {padding:5rpx;}
#select view text {border:1px solid #56abe4; border-radius:5rpx; padding:15rpx; display:inline-block; margin:0rpx 5rpx 5rpx 0rpx;}
#select view text.selected {background-color:#56abe4; color:white;}

#policy-categories {display:flex; flex-direction:column; padding:10rpx;}
#policy-categories .policy-category {display:flex; margin-bottom:5rpx; background-color:white;}
#policy-categories .policy-category image {width:120rpx; height:120rpx; background:#999; border-radius:5rpx;}
#policy-categories .policy-category view {flex:1; display:flex; flex-direction:column; justify-content:space-between; padding:10rpx 15rpx;}
#policy-categories .policy-category view text:first-child {font-size:32rpx;}
#policy-categories .policy-category view text:last-child {font-size:12rpx; color:#999;}

/* 文本溢出... */
.inline {overflow:hidden; display:-webkit-box !important; text-overflow:ellipsis; word-break:break-all; -webkit-box-orient:vertical; -webkit-line-clamp:2;}

/* 遮罩层 */
#shadow {position:fixed; left:0; top:0; width:100%; height:100%; background-color:rgba(1, 1, 1, .3);}
